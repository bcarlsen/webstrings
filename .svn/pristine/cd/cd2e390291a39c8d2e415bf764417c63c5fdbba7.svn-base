//----------------Alternative Registration Page--------------------
.alternative_registration_page { 
	width: 100%;
	height: 100%;
	background: url(../images/sign_up/main_image2.png) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}


.intro_video_box{
	
	@width: 55%;
	width: @width;
	height: @width;
	min-width: 400px;
	min-height: 250px;

	margin: auto;
	background: white;
	.border-radius(15px);
	position: relative;
	top: 100px;

	opacity: 0.96;
	border: 2px solid #ccc;
	text-align: center;
}


.rounded_edges{
	.border-radius(15px);
}

.transparent_white{
	border: 2px solid #ccc;
	background: white;
	opacity: 0.92;

}


.getting_started_page{
	width:100%;
	height:100%;
		padding-top: 50px;
	text-align: center;

	background: url(../images/about_us/graph_background.png) repeat-y center center fixed; 
	.cover;
}

.getting_started_box{
	width: 650px;
	height: 700px;	
	margin: auto;
	text-align: center;

}

.getting_started_title{
	margin-top: 35px;
	margin-bottom: 20px;
	font-family: "OstrichSansBlack";
	font-size:44px;
	color: #555;
}


.string_it_div{
	width: 100%	;
	margin: auto;
	height: 30px;
	float: left;
	text-align: center;
	color: @gray;
	font-size: 1.3em;
	line-height: 30px;
	margin-top: 50px;

	.string_it_text{
		width: 510px;
		margin: auto;
		margin-bottom: 35px;
	}

	.image_and_button{
		width: 440px;
		margin: auto;
		margin-top: 20px;

	}
	a{
		float: left;
	}

	.drag_image{
		float: right;
		width: 340px;
		height: 100px;
		background: url(../images/drag_image.png) no-repeat center center;
			.cover;

	}
}


.vimeo_video{
	border: 5px solid @gray;
}

.sign_up_box{
	height: 275px;
