//----------------Alternative Registration Page--------------------
.alternative_registration_page { 
	width: 100%;
	height: 100%;
	background: url(../images/sign_up/main_image2.png) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

.intro_video_box{
	
	@width: 55%;
	width: @width;
	height: @width;
	min-width: 400px;
	min-height: 250px;

	margin: auto;
	background: white;
	.border-radius(15px);
	position: relative;
	top: 100px;

	opacity: 0.96;
	border: 2px solid #ccc;
	text-align: center;
}

.sign_up_box{
	height: 275px;
	position: relative;
	top: 30%;
	min-width: 500px;

}

.play_buttom_image{
		
		position: relative;
		height: 50%;
		top: 20%;
		opacity: .95;
		max-top: 15px;

	}


.unclicked_video{
	width: 80%;
	height: 80%;
	margin: auto;
	background: url(../images/sign_up/w_graphic.png) no-repeat center center;
	opacity: .98;
	.contain;
}

